{
  "type": "object",
  "properties": {
    "pull_request": {
      "oneOf": [
        {
          "type": "object",
          "required": ["permittedActions"],
          "properties": {
            "permittedActions": {
              "description": "White listed actions",
              "$ref": "#/definitions/actionsAvailable"
            }
          }
        },
        {
          "type": "object",
          "required": ["filteredActions"],
          "properties": {
            "filteredActions": {
              "description": "Black listed actions",
              "$ref": "#/definitions/actionsAvailable"
            }
          }
        },
        {
          "type": "object",
          "required": ["allowedAll"],
          "properties": {
            "allowedAll": {
              "description": "If true, allow every actions",
              "type": "boolean"
            }
          }
        }
      ]
    }
  },
  "definitions": {
    "actionsAvailable": {
      "type": "array",
      "items": {
        "enum": [
          "assigned",
          "auto_merge_disabled",
          "auto_merge_enabled",
          "closed",
          "converted_to_draft",
          "edited",
          "labeled",
          "locked",
          "opened",
          "ready_for_review",
          "reopened",
          "review_request_removed",
          "review_requested",
          "synchronize",
          "unassigned",
          "unlabeled",
          "unlocked"
        ]
      },
      "uniqueItems": true
    }
  }
}
