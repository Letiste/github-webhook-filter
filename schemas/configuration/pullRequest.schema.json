{
  "$id": "pullRequest.schema.json",
  "type": "object",
  "required": ["pull_request"],
  "properties": {
    "pull_request": {
      "type": "object",
      "required": ["actions", "users-black-listed"],
      "properties": {
        "actions": {
          "type": "array",
          "description": "Permitted actions",
          "items": {
            "enum": [
              "assigned",
              "auto_merge_disabled",
              "auto_merge_enabled",
              "closed",
              "converted_to_draft",
              "edited",
              "labeled",
              "locked",
              "opened",
              "ready_for_review",
              "reopened",
              "review_request_removed",
              "review_requested",
              "synchronize",
              "unassigned",
              "unlabeled",
              "unlocked"
            ]
          },
          "uniqueItems": true
        },
        "users-black-listed": {
          "type": "array",
          "description": "List of black listed users",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
